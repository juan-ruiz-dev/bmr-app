<%- include('header'); -%>


<div class="container h-100 d-flex justify-content-center">
<div class = "form-group">
  <form action = '/' method = "POST">
  
    <input class="form-control form-control-sm" type="text" placeholder="Height in Inches" name = "height" id="height" autocomplete = "off">
    <input class="form-control form-control-sm" type="text" placeholder="Weight in lbs" name = "weight" id="weight" autocomplete = "off">
    <input class="form-control form-control-sm" type="text" placeholder="Age" name = "age" id="age" autocomplete = "off">
            <div class="form-check radio-btns">
                <input class="form-check-input" type="radio" value="male" name ="test" id="male">
                <label class="form-check-label" for="male">
                       Male
                </label>
            </div>
         <div class="form-check radio-btns">
             <input class="form-check-input" type="radio" value="female" name ="test" id="female">
             <label class="form-check-label" for="female">
                        Female
             </label>
         </div>
         <div class="container h-100 d-flex justify-content-center">
         <label for ="exercise">How much do you exercise?</label>
         <select class="form-select" name="exercise">
            <option value="1">Little or no exercise</option>
            <option value="2">1-3 times/week</option>
            <option value="3">4-5 times/week</option>
            <option value="4">Daily exercise/intense 3-4</option>
            <option value="5">Intense exercise 6-7times/week </option>

          </select>

        </div>

         <button class = "btn btn-dark btn-sm btn-block" type = submit>Get BMR</button>
         
    </form>
</div>
</div>
<p> Your starting calorie count should be <%= bmr %> </p>
<form action = "/calorie" method="get">
<button class = "btn btn-dark btn-sm" type = submit>Start the count!</button>
</form>




</section>
</body>
</html>
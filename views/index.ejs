<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/styles.css"/>
    
    <title>BMR Calculator</title>
  </head>
  <body>

    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">BMR Calculator</a>
        
    </nav> 



    <!-- Form Area -->
<h1><%= currentDay %></h1>
<div class="container h-100 d-flex justify-content-center">
<div class = "form-group">
  <form action = '/' method = "POST">
  
    <input class="form-control form-control-sm" type="text" placeholder="Height in Inches" name = "height" id="height" autocomplete = "off">
    <input class="form-control form-control-sm" type="text" placeholder="Weight in lbs" name = "weight" id="weight" autocomplete = "off">
    <input class="form-control form-control-sm" type="text" placeholder="Age" name = "age" id="age" autocomplete = "off">
            <div class="form-check radio-btns">
                <input class="form-check-input" type="radio" value="male" name ="test" id="male">
                <label class="form-check-label" for="male">
                       Male
                </label>
            </div>
         <div class="form-check radio-btns">
             <input class="form-check-input" type="radio" value="female" name ="test" id="female">
             <label class="form-check-label" for="female">
                        Female
             </label>
         </div>
         <div class="container h-100 d-flex justify-content-center">
         <label for ="exercise">How much do you exercise?</label>
         <select class="form-select" name="exercise">
            <option value="1">Little or no exercise</option>
            <option value="2">1-3 times/week</option>
            <option value="3">4-5 times/week</option>
            <option value="4">Daily exercise/intense 3-4</option>
            <option value="5">Intense exercise 6-7times/week </option>

          </select>

        </div>

         <button class = "btn btn-dark btn-sm btn-block" type = submit>Get BMR</button>
    </form>
</div>
</div>

<p> Your starting calorie intake should be <%= bmr %> </p>



<section class = "calorie-counter">
<div class="container h-100 d-flex justify-content-center">
<form action="/" method = "post"></form>
    <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="">Food and Calorie Count</span>
        </div>
        <input type="text" class="form-control">
        <input type="text" class="form-control">
      </div>

      </div>







</section>
</body>
</html>